<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RuntimeIdentifier>wasi-wasm</RuntimeIdentifier>
    <OutputType>Exe</OutputType>
    <UseAppHost>false</UseAppHost>
    <WasmSingleFileBundle>true</WasmSingleFileBundle>
    <InvariantGlobalization>true</InvariantGlobalization>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <!-- Built-in JSON library -->
    <PackageReference Include="System.Text.Json" Version="9.0.0" />

    <!-- Third-party NuGet package (demonstrates dependency) -->
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Wasi.Sdk" Version="0.1.4-preview.10020" />

    <!-- Shared guest library (at repository root) -->
    <ProjectReference Include="../../guest/csharp/CSharpWadupGuest.csproj" />
  </ItemGroup>
</Project>
